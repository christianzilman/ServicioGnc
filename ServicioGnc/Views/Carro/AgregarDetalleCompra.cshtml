@{
    ViewBag.Title = "AgregarDetalle";
    Layout = null;
}

@{
    List<ServicioGnc.Models.Carro> listCarro = ViewBag.ListCarro;
     
    <br/>
    <div class="alert alert-warning" role="alert">
        <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
    Listado de Pedido
</div>

 
        
    <table class="table">
        <tr class="warning">
            <td>Nombre Producto</td>
            <td>Cantidad</td>
            <td>Precio</td>
            <td>SubTotal</td>
            <td></td>
        </tr>
        @foreach(ServicioGnc.Models.Carro carro in listCarro){
            <tr>
                
                <td>@carro.Producto.Nombre</td>
                
                <td>@carro.Cantidad</td>

                <td>@carro.Precio</td>
                
                <td>@carro.SubTotal</td>

                <td><a href="javascript:EliminarDetalleCompra(@carro.CarroId)">Eliminar</a></td>
            </tr>   
        }
    </table>
    
    
}