@model ServicioGnc.Models.Venta

@*@{
    ViewBag.Title = "Venta";
}*@

<div class="alert alert-warning" role="alert">
    <span class="glyphicon glyphicon-usd" aria-hidden="true"></span>
    Venta - Servicio Gnc
</div>

<div style="margin-right:auto"><h4>Factura N°: @Html.DisplayFor(model => model.VentaId)</h4>  </div>
<div style="margin-right:auto"><h4>Fecha: @Html.DisplayFor(model => model.Fecha)</h4>  </div>
<br />
<br />

    <fieldset>
        <legend>Venta</legend>

        <div class="display-label">
            <h4>Cliente:  @Html.DisplayFor(model => model.Cliente.Nombre) </h4>
        </div>
        <div class="display-label">
            <h4>Domicilio Cliente : @Html.DisplayFor(model => model.Cliente.Domicilio)</h4>
        </div>
        <br />
        <br />
        <h5>Detalle de venta</h5>
        <table class="table">
            <tr class="warning">
                <th>Código</th>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio</th>
            </tr>
            @foreach (var item in Model.DetalleVentas)
            {
                <tr>
                    <th>@Html.DisplayFor(modelItem => item.ProductoId)</th>
                    <th>@Html.DisplayFor(modelItem => item.Producto.Nombre)</th>
                    <th>@Html.DisplayFor(modelItem => item.Cantidad)</th>
                    <th>$ @Html.DisplayFor(modelItem => item.Precio)</th>

                </tr>
            }

        </table>


        <div class="display-label" style="margin-right:auto">
            <h2 class="right">  Total:$  @Html.DisplayFor(model => model.Total)</h2>
        </div>



    </fieldset>
