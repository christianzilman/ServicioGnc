@model ServicioGnc.Models.Feriado

@{
    ViewBag.Title = "Feriados";
}

<div class="panel panel-warning">
    <div class="panel-heading">
        <h2 class="panel-title">Edición de Feriados</h2>
    </div>
    <div class="panel-body">
        <div class="col-md-3">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend>Feriado</legend>

                    @Html.HiddenFor(model => model.FeriadoId)

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Fecha)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Fecha)
                        @Html.ValidationMessageFor(model => model.Fecha)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Nombre)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Nombre)
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>

                    <br />
                    <p>
                        <input type="submit" class="btn-warning" value="Guardar" />
                    </p>
                </fieldset>
            }

            <div>
                @Html.ActionLink("Volver al listado", "Index")
            </div>
        </div>
    </div>
