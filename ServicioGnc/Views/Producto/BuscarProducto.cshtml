@model IEnumerable<ServicioGnc.Models.Producto>
@{
    ViewBag.Title = "BuscarProducto";
    Layout = null;
}

<br/>

<div class="alert alert-warning" role="alert">
    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
    Resultados de búsqueda
</div>

<table class="table">
    <thead>
        <tr class="warning">
            <th hidden="hidden">
                Código
            </th>

            <th>
               Producto
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Precio
            </th>

        </tr>
    </thead>
    <tbody>

            <tr>
                <td hidden="hidden">
                    <input type="text" value="@ViewBag.ProductoId" id="ProductoIdPanel" name="ProductoIdPanel" />
                </td>

                <td>
                    <label>
                        @ViewBag.NombreProducto
                    </label>
                </td>
                <td>
                    <input type="text" value="1" id="ProductoCantidad" name="ProductoCantidad" />
                </td>
                <td>
                    <label>@ViewBag.PrecioVenta</label>
                </td>

            </tr>
        
    <tbody>
</table>







