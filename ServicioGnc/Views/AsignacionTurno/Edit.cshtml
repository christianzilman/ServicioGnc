@model ServicioGnc.Models.AsignacionTurno

@{
    ViewBag.Title = "Edit";
}

<div class="alert alert-warning" role="alert">
    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
    Modificar Asignación
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Asignación Turno</legend>

        @Html.HiddenFor(model => model.AsignacionTurnoId)

        <div class="editor-label">
            @Html.LabelFor(model => model.TurnoId, "Turno")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TurnoId", String.Empty)
            @Html.ValidationMessageFor(model => model.TurnoId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PersonaId, "Persona")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PersonaId", String.Empty)
            @Html.ValidationMessageFor(model => model.PersonaId)
        </div>

        <div class="editor-label">
            Observación
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Observacion)
            @Html.ValidationMessageFor(model => model.Observacion)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
