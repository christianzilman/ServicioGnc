<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Servicio Gnc </title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap-3.1.1/css/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-3.1.1/css/bootstrap.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap-3.1.1/css/bootstrap-theme.css")" rel="stylesheet" />
    
    <script src="@Url.Content("~/Scripts/jquery.js")"></script>
    <script src="~/Content/bootstrap-3.1.1/js/bootstrap.js"></script>
    <script src="~/Content/bootstrap-3.1.1/js/moment.js"></script>
    <script src="~/Content/bootstrap-3.1.1/js/bootstrap-datetimepicker.js"></script>

    <!--<link href="~/Content/bootstrap-3.1.1/css/sticky-footer-navbar.css" rel="stylesheet" />-->
    <!--<link href="~/Content/bootstrap-3.1.1/css/navbar-fixed-top.css" rel="stylesheet" />-->
</head>
<body role="document">
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~\Home\Index"> Servicio Gnc</a>
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Compra<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Compras", "CreateCompra", "Carro")</li>
                            <li>@Html.ActionLink("Listado de Compras", "Index", "Compra")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Venta<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Ventas", "Create", "Carro")</li>
                            <li>@Html.ActionLink("Listado de Ventas", "Index", "Venta")</li>
                        </ul>
                    </li>
                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Control de Empleado <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Empleado", "Index", "Persona")</li>
                            <li>@Html.ActionLink("Liquidaciones", "Index", "Liquidacion")</li>
                            <li>@Html.ActionLink("Familiares", "Index", "Familiar")</li>
                            <li>@Html.ActionLink("Conceptos", "Index", "Concepto")</li>
                        </ul>
                    </li>
            
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reportes <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Historia de un Articulo", "CodigoProductoVentaCompra", "Reporte")</li>                    
                            <li>@Html.ActionLink("Historial de un Articulo por Periodo", "CodigoPeriodoProductoVentaCompra", "Reporte")</li>                    
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Asignacion de Turnos", "Index", "AsignacionTurno")</li>                    
                    <li>@Html.ActionLink("Presión y Temperatura", "Index", "LecturaPresionTemperatura")</li>                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Fichada <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Cargar de Ficha", "Index", "Fichada")</li>
                            <li>@Html.ActionLink("Consulta", "Consulta", "Fichada")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Parametros <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Turnos", "Index", "Turno")</li>
                            <li>@Html.ActionLink("Clientes", "Index", "Cliente")</li>
                            <li>@Html.ActionLink("Empleados", "Index", "Persona")</li>
                            <li>@Html.ActionLink("Unidad", "Index", "Unidad")</li>
                            <li>@Html.ActionLink("Horario", "Index", "Horario")</li>
                            <li>@Html.ActionLink("Proveedor", "Index", "Proveedor")</li>
                            <li>@Html.ActionLink("Turno Especial", "Index", "TurnoEspecial")</li>
                            <li>@Html.ActionLink("Feriado","Index","Feriado")</li>
                            
                            @if (Request.IsAuthenticated)
                            {
                                try
                                { 
                                    if (User.IsInRole("administrador") || User.IsInRole("negocio"))
                                    {
                                        <li>@Html.ActionLink("Empleados", "Index", "Empleado")</li>
                                        <li>@Html.ActionLink("Crear Usuario", "RegisterRole", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                                    }
                                }
                                catch { }
                            }

                            <li>@Html.ActionLink("Usuarios", "Index", "Unidad")</li>
                        </ul>
                    </li>                                
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
    <div id="body" class="container theme-showcase" role="main">
        <br /><br /><br />
        @RenderSection("featured", required: false)
        <!--<section class="content-wrapper main-content clear-fix">-->
        @RenderBody()

    </div> <!-- /container -->
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    @RenderSection("scripts", required: false)
</body>

</html>