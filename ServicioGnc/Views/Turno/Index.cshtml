@model IEnumerable<ServicioGnc.Models.Turno>

@{
    ViewBag.Title = "Turnos";
}

<h2>Turnos</h2>

<p>
    @Html.ActionLink("Crear nuevo turno", "Create")
</p>
<table   class="table" >
    <tr class="warning">
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.TurnoId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.TurnoId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.TurnoId })
        </td>
    </tr>
}

</table>
