@model ServicioGnc.Models.Turno

@{
    ViewBag.Title = "Edit";
}

<div class="alert alert-warning" role="alert">
    <span class="glyphicon glyphicon-dashboard" aria-hidden="true"></span>
    Modificar
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Turno</legend>

        @Html.HiddenFor(model => model.TurnoId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nombre)
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>

        @{
    List<ServicioGnc.Models.DetalleTurno> listDetalleTurno = ViewBag.DetalleTurnos;
        }
        <table class="table">
            <tr>
                <th>
                    Horario
                </th>
                <th>
                    Dia
                </th>
                <th></th>
            </tr>

            @foreach (var item in listDetalleTurno)
            {
                <tr>
                    <td>
                        @item.Horario.ComienzoTurno  --- @item.Horario.FinalTurno
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dia)
                    </td>
                    <td>
                        <a href="javascript:eliminarDetalle(@item.DetalleTurnoId)">Eliminar</a>
                    </td>
                </tr>
            }

        </table>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
