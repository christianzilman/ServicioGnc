@model IEnumerable<ServicioGnc.Models.Fichada>

@{
    ViewBag.Title = "Fichada";
}

<h2>Fichadas</h2>

<p>
    @Html.ActionLink("Nueva Fichada", "Create")
</p>
<p>
    @Html.ActionLink("Carga masiva de fichadas", "Create")
</p>

<table class="table">
    <tr class="warning">
        <th>
            Fecha de ingreso
        </th>
        <th>
            Fecha de Egreso
        </th>
        <th>
            Empleado
        </th>
        <th>
            Observacion
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FechaIngreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaEgreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observacion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.FichadaId }) |
          @*  @Html.ActionLink("Details", "Details", new { id=item.FichadaId }) |*@
            @Html.ActionLink("Eliminar", "Delete", new { id=item.FichadaId })
        </td>
    </tr>
}

</table>
