@model ServicioGnc.Models.Fichada

@{
    ViewBag.Title = "Fichada";
}

<div class="alert alert-warning" role="alert">
    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
    Fichadas
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Fichada</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.FechaIngreso)
        </div>
        <div class="editor-field">
            <input id="FechaIngreso" name="FechaIngreso" value="@Model.FechaIngreso" class="datepicker" data-date-format="dd-mm-yyyy" />
            @Html.ValidationMessageFor(model => model.FechaIngreso)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FechaEgreso)
        </div>
        <div class="editor-field">
            <input id="FechaEgreso" name="FechaEgreso" value="@Model.FechaEgreso" class="datepicker" data-date-format="dd-mm-yyyy" />
            @Html.ValidationMessageFor(model => model.FechaEgreso)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PersonaId, "Persona")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PersonaId", String.Empty)
            @Html.ValidationMessageFor(model => model.PersonaId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Observacion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Observacion)
            @Html.ValidationMessageFor(model => model.Observacion)
        </div>

        <p>
            <input type="submit" class ="btn-warning" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $(function () {
        $('#FechaEgreso').datepicker({
            dateFormat: 'dd-mm-yy'
        });
        $('#FechaIngreso').datepicker({
            dateFormat: 'dd-mm-yy'
        });
    });
</script>