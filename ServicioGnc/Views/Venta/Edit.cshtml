@model ServicioGnc.Models.Venta

@{
    ViewBag.Title = "Venta";
}

<div class="alert alert-warning" role="alert">
    <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
    Venta
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Venta</legend>

        @Html.HiddenFor(model => model.VentaId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Fecha)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Fecha)
            @Html.ValidationMessageFor(model => model.Fecha)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.ClienteId, "Cliente")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ClienteId", String.Empty)
            @Html.ValidationMessageFor(model => model.ClienteId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TipoEstadoId, "TipoEstado")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TipoEstadoId", String.Empty)
            @Html.ValidationMessageFor(model => model.TipoEstadoId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Total)
        </div>
        <div class="editor-field">
            $ @Html.DisplayFor(model => model.Total)
        </div>

        <br />
        <p>
            <input type="submit"class="btn-warning" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
