@model ServicioGnc.Models.Liquidacion

@{
    ViewBag.Title = "Eliminar Liquidación";
}

<h2>Eliminar Liquidación</h2>


<div class="panel panel-warning">
    <div class="panel-heading">
        <h2 class="panel-title">Liquidación - ¿Está seguro de que desea eliminar esto?</h2>
    </div>
    <div class="panel-body">
        <div class="col-md-3">
            <div>    Nombre: @Html.DisplayFor(model => model.Persona.Nombre) </div>
            <div>    Empresa: @Html.DisplayFor(model => model.Empresa.Nombre)</div>
            <div>    Total: @Html.DisplayFor(model => model.Total)</div>
            <div>    Fecha: @Html.DisplayFor(model => model.Fecha)</div>
            <div>    Periodo: @Html.DisplayFor(model => model.Periodo)</div>
            <br />
            <div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <p>
                            <input type="submit" class="btn-warning" value="Eliminar" /> |
                            @Html.ActionLink("Volver al listado", "Index")
                        </p>
                    }

            </div>
        </div>
    </div>
</div>
