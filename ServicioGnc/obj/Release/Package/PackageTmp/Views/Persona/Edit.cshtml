@model ServicioGnc.Models.Persona

@{
    ViewBag.Title = "Empleado";
}

<div class="alert alert-warning" role="alert">
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    Empleado
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Persona</legend>

        @Html.HiddenFor(model => model.PersonaId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nombre)
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>

        @*<div class="editor-label">
            @Html.LabelFor(model => model.RolId, "Rol")
        </div>
        <div class="editor-field">
            @Html.DropDownList("RolId", String.Empty)
            @Html.ValidationMessageFor(model => model.RolId)
        </div>*@

        <div class="editor-label">
            @Html.LabelFor(model => model.Apellido)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Apellido)
            @Html.ValidationMessageFor(model => model.Apellido)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Dni)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Dni)
            @Html.ValidationMessageFor(model => model.Dni)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Domicilio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Domicilio)
            @Html.ValidationMessageFor(model => model.Domicilio)
        </div>

        <div class="editor-label">
            <b>Fecha de Nacimiento</b>
        </div>
        <div class="editor-field">
            @*@Html.EditorFor(model => model.FechaNacimiento,"dd/MM/yyyy")
            @Html.ValidationMessageFor(model => model.)*@
            <input id="FechaNacimiento" name="FechaNacimiento" value="@Model.FechaNacimiento" class="datepicker" data-date-format="dd-mm-yyyy" />
            @Html.ValidationMessageFor(model => model.FechaNacimiento)
        </div>

        <div class="editor-label">
            <b>Fecha de Egreso</b>
        </div>
        <div class="editor-field">
            <input id="FechaEgreso" name="FechaEgreso"  value="@Model.FechaEgreso" class="datepicker" data-date-format="dd-mm-yyyy" />
            @Html.ValidationMessageFor(model => model.FechaEgreso)
        </div>

        <div class="editor-label">
            <b>Fecha de Ingreso</b>
        </div>
        <div class="editor-field">
            <input id="FechaIngreso" name="FechaIngreso" value="@Model.FechaIngreso" class="datepicker" data-date-format="dd-mm-yyyy"/>
            @Html.ValidationMessageFor(model => model.FechaIngreso)
        </div>
        <br/>
        <p>
            <input type="submit" class="btn-warning" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>    
    $(function () {
        $('#FechaNacimiento').datepicker({
            dateFormat: 'dd-mm-yy'
        });
        $('#FechaIngreso').datepicker({
            dateFormat: 'dd-mm-yy'
        });
        $('#FechaEgreso').datepicker({
            dateFormat: 'dd-mm-yy'
        })
    });
</script>