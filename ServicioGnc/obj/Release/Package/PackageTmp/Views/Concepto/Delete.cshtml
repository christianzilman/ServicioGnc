@model ServicioGnc.Models.Concepto

@{
    ViewBag.Title = "Concepto";
}

<div class="panel panel-warning">
    <div class="panel-heading">
        <h2 class="panel-title">Concepto - ¿Está seguro de que desea eliminar esto?</h2>
    </div>
    <div class="panel-body">
        <div class="col-md-3">
            <div>    Nombre: @Html.DisplayFor(model => model.Nombre) </div>
            <div>    Porcentaje: @Html.DisplayFor(model => model.Porcentaje) </div>
            <div>    Importe: @Html.DisplayFor(model => model.Importe) </div>
            <div>    Utilidad: @Html.DisplayFor(model => model.Utilidad) </div>
            <div>    Tipo de Concepto: @Html.DisplayFor(model => model.TipoConcepto.Nombre) </div>
            <br />
            <div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <p>
                        <input type="submit" class="btn-warning" value="Eliminar" /> |
                        @Html.ActionLink("Volver al listado", "Index")
                    </p>
                }

            </div>
        </div>
    </div>
</div>

