@model ServicioGnc.Models.Horario

@{
    ViewBag.Title = "Edit";
}

<div class="alert alert-warning" role="alert">
    <span class="glyphicon glyphicon-dashboard" aria-hidden="true"></span>
    Modificar el Horario
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Horario</legend>

        @Html.HiddenFor(model => model.HorarioId)

        <div class="editor-label">
            Comienzo del Turno:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ComienzoTurno)
            @Html.ValidationMessageFor(model => model.ComienzoTurno)
        </div>

        <div class="editor-label">
            Final del Turno
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FinalTurno)
            @Html.ValidationMessageFor(model => model.FinalTurno)
        </div>

        <p>
            <input type="submit" class="btn-warning" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
