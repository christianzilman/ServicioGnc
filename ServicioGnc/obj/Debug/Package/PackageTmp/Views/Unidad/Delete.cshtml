@model ServicioGnc.Models.Unidad

@{
    ViewBag.Title = "Unidad";
}
<div class="alert alert-warning" role="alert">
    <span class="glyphicon glyphicon-asterisk" aria-hidden="true"></span>
    Unidad
</div>


<div class="panel panel-warning">
    <div class="panel-heading">
        <h2 class="panel-title">Unidad - ¿Está seguro de que desea eliminar esto?</h2>
    </div>
    <div class="panel-body">
        <div class="col-md-3">
            <div>    Nombre: @Html.DisplayFor(model => model.Nombre) </div>
            <br />
            <div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <p>
                        <input type="submit" class="btn-warning" value="Eliminar" /> |
                        @Html.ActionLink("Volver al listado", "Index")
                    </p>
                }

            </div>
        </div>
    </div>
</div>
