@model ServicioGnc.Models.Producto

@{
    ViewBag.Title = "Editar Producto";
}
<div class="alert alert-warning" role="alert">
    <span class="glyphicon glyphicon-barcode" aria-hidden="true"></span>
    Productos
</div>

<div class="panel panel-warning">
    <div class="panel-heading">
        <h2 class="panel-title">Edición de Productos</h2>
    </div>
    <div class="panel-body">
        <div class="col-md-3">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend>Producto</legend>

                    @Html.HiddenFor(model => model.ProductoId)

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Nombre)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Nombre)
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.PrecioCompra)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.PrecioCompra)
                        @Html.ValidationMessageFor(model => model.PrecioCompra)
                    </div>


                    <div class="editor-label">
                        @Html.LabelFor(model => model.Utilidad)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Utilidad)
                        @Html.ValidationMessageFor(model => model.Utilidad)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.UnidadId, "Unidad")
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("UnidadId", String.Empty)
                        @Html.ValidationMessageFor(model => model.UnidadId)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.PrecioVenta)
                    </div>
                    <div class="editor-field">                        
                        <input name="PrecioVenta" id="PrecioVenta"  value="@Model.PrecioVenta" readonly="readonly"/>

                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Cantidad)
                    </div>
                    <div class="editor-field">
                        <input name="Cantidad" id="Cantidad" value="@Model.Cantidad"  readonly="readonly"/>
                        @Html.ValidationMessageFor(model => model.Cantidad)
                    </div>
                    <br />
                    <p>
                        <input type="submit" class="btn-warning" value="Guardar" />
                    </p>
                </fieldset>
            }

            <div>
                @Html.ActionLink("Volver al listado", "Index")
            </div>
        </div>
    </div>
</div>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
